<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="SemanticTreeview">
	<target name="build">
		<delete dir="bin/zip" />
		<delete file="bin/smwhalo-treeview-${version}.zip" />
		<mkdir dir="bin/zip" />

		<copy todir="bin/zip/extensions/Treeview/img">
			<fileset dir="../img/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/Treeview/">
			<fileset file="../*">
				<exclude name="**/.svn, **/CVS" />
				<exclude name="**/*deploy*" />
			</fileset>
		</copy>
		<zip destfile="bin/smwhalo-treeview-${version}.zip" basedir="bin/zip" />
		<delete dir="bin/zip" />
	</target>
</project>
